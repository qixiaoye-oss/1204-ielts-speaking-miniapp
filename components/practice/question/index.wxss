.sentence_instruction {
  font-size: 12px;
  padding: 5px 10px;
  border-radius: 3px;
  color: rgba(0, 166, 237, 1);
  background: rgba(0, 166, 237, 0.15);
}

.sentence_cover {
  line-height: 1.4;
  font-size: 18px;
}

.sentence__img {
  max-width: 100%;
}

.label_cell_but {
  border: 1px solid var(--solid-border-color);
  color: var(--solid-border-color);
  padding: 5px 10px;
  line-height: 1.4;
  font-size: 12px;
  text-align: center;
  border-radius: 3px;
  box-sizing: border-box;
}

.label_cell_but_sel {
  background: rgba(255, 176, 45, 1);
  border-color: transparent;
  color: #ffffff;
}

/* 新样式 */
.recoding__none {
  padding: 15px;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.recoding__none-img {
  width: 25px;
  height: 25px;
}

.recoding__active {
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
}

.recoding__active-header {
  padding: 15px;
  display: flex;
  align-items: flex-start;
}

.recoding__header-left {
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
  gap: 10px;
  flex-grow: 1;
}

.recoding__header-tip {
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 10px;
}

.recoding__header-right {
  flex-shrink: 0;
  display: flex;
  align-items: flex-start;
  gap: 10px;
  margin-left: auto;
}

.recoding__active-answer {
  margin: 15px;
  margin-top: -4px;
  font-size: 14px;
  line-height: 1.4;
}

.recoding__active-answer--hidden {
  margin: 15px;
  margin-top: -4px;
  background-color: rgba(0, 0, 0, 0.1);
  font-size: 14px;
  color: transparent;
  border-radius: 3px;
}

.recoding__active-intervals {
  height: 1px;
  background: var(--solid-border-color);
}

.recoding__active-footer {
  padding: 15px;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.6);
}

.recoding__complete {
  padding: 15px;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.recoding-complete__right {
  display: flex;
  align-items: center;
  margin-left: auto;
  gap: 10px;
}

.recoding-complete__img {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}