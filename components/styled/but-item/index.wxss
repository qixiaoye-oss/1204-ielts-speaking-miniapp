@import "/style/theme.wxss";

.but_container {
  border-style: solid;
  padding: 10px;
  display: flex;
  height: 44px;
  max-height: 44px;
  min-width: 44px;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-size: 16px;
  border: 2px solid rgba(0, 0, 0, 0.2);
  position: relative;
}

.dis {
  opacity: 0.3;
}

.badge {
  position: absolute;
  border: 1px solid var(--solid-border-color);
  color: rgba(0, 0, 0, 0.4);
  width: 20px;
  height: 20px;
  right: -10px;
  top: -10px;
  border-radius: 3px;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.badge-sv2 {
  color: rgba(255, 176, 45, 1);
  border-color: rgba(255, 176, 45, 1);
}

.badge-sv3 {
  color: rgba(0, 210, 106, 1);
  border-color: rgba(0, 210, 106, 1);
}

.rotate {
  transform: rotate(180deg);
}

.quit {
  border: 2px solid rgba(0, 0, 0, 0.2);
}

.grey-font-color {
  color: rgba(0, 0, 0, 0.3);
}