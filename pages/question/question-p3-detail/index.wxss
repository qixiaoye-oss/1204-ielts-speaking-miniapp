.unit-detail {
  border-radius: 9px;
  border-width: 1px;
  border-style: solid;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px;
  gap: 10px;
}

.unit-detail__text {
  font-weight: 600;
  line-height: 1.4;
  color: #000000;
}

.unit-detail__text-supplementary {
  font-weight: normal;
  display: flex;
  align-items: center;
  margin-top: 6px;
}

.unit-detail__text-supplementary-icon {
  display: inline-block;
  border: 1px solid rgba(98, 126, 151, 1);
  font-size: 9px;
  padding: 4px;
  border-radius: 3px;
  line-height: 1;
  margin-right: 6px;
}

.unit-detail__icon {
  width: 20px;
  min-width: 20px;
  height: 20px;
  min-height: 20px;
}

.link-block {
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  position: relative;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.answer-link-block {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: calc(750rpx - 40px);
  border-bottom: 1px solid var(--solid-border-color);
}

.link-block__type {
  font-size: 14px;
  padding: 15px;
  text-align: center;
  box-sizing: border-box;
  white-space: nowrap;
}

.link-block__title {
  flex-grow: 1;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  min-width: 0;
}

.link-block__title-content {
  border-radius: 40px;
  margin: 15px;
  padding: 6px 20px;
  display: flex;
  overflow: hidden;
  gap: 10px;
}

.link-block__title-img {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.link-block__title-text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.link-block__tag {
  flex-shrink: 0;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
  margin-right: 15px;
  min-width: 48px;
}

.answer-detail {
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  overflow: hidden;
}

.answer-detail__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.answer-detail__content {
  display: flex;
  flex-direction: column;
  gap: 15px;
  padding: 15px;
}

.paragraph {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  gap: 10px;
}

.paragraph__title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.paragraph__title-text {
  background: rgba(0, 0, 0, 0.4);
  padding: 2px 10px;
  color: #ffffff;
  border-radius: 3px;
  font-size: 14px;
}

.paragraph__content {
  width: 100%;
  border-width: 1px;
  border-radius: 3px;
  border-style: dashed;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.paragraph__content-sentence {}

.similar_cell {
  padding: 20px 20px;
  border: 0px;
  background: var(--background-color-1);
  margin: 0;
  border-bottom: 1px solid #ffffff;
}

.similar_cell:first-child {
  border-top-left-radius: 9px;
  border-top-right-radius: 9px;
}

.similar_cell:last-child {
  border-bottom-left-radius: 9px;
  border-bottom-right-radius: 9px;
}

.similar_tag_cell {
  border-radius: 3px;
  font-size: 14px;
  color: var(--old-main-color);
  border: 1px solid var(--old-main-color);
  display: inline-block;
  padding: 1px 10px;
  transform: scale(0.66);
  transform-origin: left top;
}

.mt10 {
  margin-top: 10px;
}