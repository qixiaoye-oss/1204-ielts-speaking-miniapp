.unit-detail {
  border-radius: 9px;
  border-width: 1px;
  border-style: solid;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 15px;
  gap: 10px;
}

.unit-detail__text {
  font-weight: 600;
  line-height: 1.4;
  color: #000000;
}

.additional_content {
  margin-top: 10px;
  font-weight: normal;
}

.series {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.series__item {
  border: 1px solid var(--solid-border-color);
  box-sizing: border-box;
  border-radius: 9px;
  padding: 10px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.series__item view {
  padding: 5px 10px;
  border-radius: 30px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.series__item image {
  width: 20px;
  height: 20px;
}

.series__active {
  border-color: rgba(248, 49, 47, 1);
}

.link-block {
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  background: #FFFFFF;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: calc(750rpx - 40px);
}

.answer-link-block {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: calc(750rpx - 40px);
  border-bottom: 1px solid var(--solid-border-color);
}

.link-block__type {
  flex-shrink: 0;
  font-size: 14px;
  padding: 15px;
  text-align: center;
  box-sizing: border-box;
  white-space: nowrap;
}

.link-block__title {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  flex-grow: 1;
  min-width: 0;
}

.link-block__title-content {
  max-width: 100%;
  border-radius: 40px;
  margin: 15px;
  padding: 6px 20px;
  display: flex;
  align-items: center;
  gap: 10px;
  overflow: hidden;
}

.link-block__title-img {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.link-block__title-text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.link-block__tag {
  flex-shrink: 0;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
  margin-right: 15px;
}

.answer-detail {
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  overflow: hidden;
}

.answer-detail__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.answer-detail__content {
  padding: 15px 15px 5px 15px;
}

.paragraph {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.paragraph__content-sentence {
  margin-bottom: 10px;
  border-radius: 3px;
}