.list_item_container {
  border: 1px solid var(--solid-border-color);
  overflow: hidden;
  box-sizing: border-box;
  border-radius: 9px;
  margin-bottom: 15px;
}

.list_item_top {
  padding: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: relative;
}

/* 正文样式 */
.chapter-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.chapter-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  border-width: 1px;
  border-radius: 9px;
  border-style: dashed;
  border-color: var(--dashed-border-color);
  box-sizing: border-box;
  padding: 15px;
  gap: 15px;
}

.chapter-group__header--layout {
  display: flex;
  align-items: center;
  justify-content: center;
}

.chapter-group__header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 36px;
  border-radius: 28px;
  color: rgba(0, 0, 0, 0.8);
  box-sizing: border-box;
  padding-inline: 15px;
}

.chapter-group__icon {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}

.chapter-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
  flex: 1;
}

.chapter {
  width: 100%;
  border-width: 1px;
  border-radius: 6px;
  border-style: solid;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
}

.chapter__header {
  width: 100%;
  padding: 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  gap: 10px;
}

.chapter__header-title {
  padding: 5px;
  border-radius: 3px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  position: relative;
  left: -5px;
  min-width: 0;
}

.chapter__title-icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.chapter__title-text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 1.4;
}