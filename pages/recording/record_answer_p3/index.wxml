<block wx:if="{{list.length > 0}}">
  <progress list="{{list}}" recording="{{status === 1}}" time="{{recordingTime}}"></progress>
  <view class="layout_flex_col" style="margin-top: 15px; gap: 15px;">
    <view class="sentence_cell base-font-color f16 fwb {{index == nowPlayAudioIndex ? 'sel_':''}}" wx:for="{{list}}" wx:key="item">{{item.audioType}}</view>
  </view>
  <buts>
    <but bind:change="cancel" pattern="quit" text="放弃"></but>
    <view class="flex1"></view>
    <block wx:if="{{status === 0}}">
      <but bind:change="gatUserAuthor" text="点击开始答题/录音" img-url="/image/v2/stop.png"></but>
    </block>
    <block wx:if="{{status === 1 && (nowPlayAudioIndex < (list.length - 1))}}">
      <but bind:change="nextRecoding" disabled="{{audioStatus === 'play'}}" text="请回答.../点击下一题" img-url="/image/v2/next.png"></but>
    </block>
    <block wx:if="{{status === 1 && (nowPlayAudioIndex == (list.length - 1))}}">
      <but bind:change="stopRecoding" disabled="{{audioStatus === 'play'}}" text="请回答最后一题..." img-url="/image/v2/down.png"></but>
    </block>
    <block wx:if="{{status === 2}}">
      <but bind:change="stopRecoding" disabled="{{true}}" text="请回答最后一题..." img-url="/image/v2/down.png"></but>
    </block>
  </buts>
</block>
<no-data wx:if="{{list.length == 0}}" text="暂无数据"></no-data>