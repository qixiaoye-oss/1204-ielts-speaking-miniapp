<view class="layout_grid " style="gap: 15px;">
  <view class="group" wx:for="{{list}}" wx:for-item="group" wx:key="groupIndex" wx:for-index="groupIndex">
    <view class="group__title" style="background: {{background}};color: {{color}};">{{group.title}}</view>
    <view class="practice" wx:for="{{group.list}}" wx:for-item="practice" wx:key="practiceIndex" wx:for-index="practiceIndex">
      <view class="practice__header">
        <view class="practice__tips">
          <view class="practice__tips-tip" style="background: {{background}};color: {{color}};">{{practice.instruction}}</view>
          <view wx:if="{{item.selected}}" class="practice__tips-label">不熟</view>
        </view>
        <view class="practice__question-content">{{practice.statementContent}}</view>
        <view class="practice__question-sentence" bind:tap="playSample" data-practice-index="{{practiceIndex}}" data-group-index="{{groupIndex}}">{{practice.sampleSentences}}</view>
      </view>
      <view class="practice-intervals"></view>
      <view class="practice__footer">
        <view class="practice__tips">
          <view class="practice__tips-tip" style="background: {{background}};color: {{color}};">我的回答</view>
        </view>
        <view class="my-answer">
          <view class="my-answer__wait" wx:if="{{practice.status}}">{{practice.status}}</view>
          <view class="my-answer__content" wx:else bind:tap="playAudio" data-practice-index="{{practiceIndex}}" data-group-index="{{groupIndex}}">{{practice.content}}</view>
          <image class="my-answer__img" wx:if="{{practice.playing !== 'play'}}" src="/image/icon/play.png" bind:tap="playAudio" data-practice-index="{{practiceIndex}}" data-group-index="{{groupIndex}}"></image>
          <image class="my-answer__img" wx:else src="/image/icon/pause.png" bind:tap="stopAudio"></image>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="bottom_spacing"></view>
<buts>
  <but bind:change="cancel" text="保存并返回" img-url="/image/v2/save-return.png"></but>
</buts>
<no-data wx:if="{{list.length == 0}}"></no-data>