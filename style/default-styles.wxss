/* 通用默认样式表 */
/* 首页 */
.home {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.home-main-item {
  padding: 15px;
  border-radius: 9px;
  width: 100%;
}

.home-main-item__title {
  font-weight: 600;
  text-align: left;
  margin-bottom: 15px;
}

.home-main-item__content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.home-main-item__content--grid {
  display: grid;
  grid-column-gap: 10px;
  grid-row-gap: 10px;
  grid-template-columns: repeat(2, 1fr);
}

.home-sub-item {
  overflow: hidden;
  border-radius: 6px;
  border: 1px solid transparent;
}

.home-sub-item__description {
  font-size: 14px;
  line-height: 1.4;
  color: #FFFFFF;
  padding: 5px 15px;
  border: 1px solid transparent;
  border-bottom: 0px;
}

.home-sub-item__content {
  padding: 15px;
  background: #FFFFFF;
  border-radius: 6px;
  position: relative;
}

.home-main-item__content .home-sub-item__content:after {
  content: " ";
  display: inline-block;
  height: 8px;
  width: 8px;
  border-width: 2px 2px 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -5px;
  right: 15px;
}


.home-sub-item__header {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  gap: 10px;
  margin-right: 18px;
}

.home-sub-item__title--icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
  position: relative;
  top: 2px;
}

.home-sub-item__title--text {
  font-size: 20px;
  font-weight: 600;
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
}

.home-sub-item__footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
  flex-wrap: wrap;
}

.home-sub-item__content--small {
  padding: 15px;
  background: #FFFFFF;
  border-radius: 6px;
  position: relative;
}

.home-sub-item__content--small .home-sub-item__description--text {
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10px;
}

.home-sub-item__content--small .home-sub-item__title--text {
  font-size: 14px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
}

/* 通用标签样式 */
.tag {
  box-sizing: border-box;
  padding-inline: 5px;
  height: 22px;
  border-radius: 3px;
  font-size: 12px;
  display: flex;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-shrink: 0;
}

.tag--transparent {
  background: transparent;
  border: 1px solid transparent;
  color: #ffffff;
}

.tag--opaque {
  border: 1px solid transparent;
  background: #ffffff;
}

.tag--orange {
  border: 1px solid transparent;
  color: #ffffff;
  background: #FFB02D;
}

.tag__multi {
  gap: 8px;
  max-width: 100%;
}

.tag__multi--green {
  border: 1px solid transparent;
  background: rgba(0, 210, 106, 0.15);
  color: rgba(0, 210, 106, 1);
}

.tag__multi--orange {
  border: 1px solid transparent;
  background: rgba(255, 176, 45, 0.15);
  color: rgba(255, 176, 45, 1);
}

.tag__multi--gray {
  border: 1px solid rgba(0, 0, 0, 0.15);
  background: #ffffff;
  color: rgba(0, 0, 0, 0.15);
}

.tag__intervals {
  width: 1px;
  height: 13px;
}

.tag__multi--green .tag__intervals {
  background: rgba(0, 210, 106, 1);
}

.tag__multi--orange .tag__intervals {
  background: rgba(255, 176, 45, 1);
}

.tag__multi--gray .tag__intervals {
  background: rgba(0, 0, 0, 0.15);
}

.tag__multi view:first-child {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tag--right {
  margin-left: auto;
}

/* 通用布局样式 */
.main-page {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  gap: 15px;
}

.main-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  border: 1px dashed var(--dashed-border-color);
  border-radius: 9px;
  padding: 15px;
}

.main-item__title {
  display: flex;
  align-items: center;
  gap: 10px;
  height: 40px;
  border-radius: 28px;
  box-sizing: border-box;
  padding-inline: 15px;
}

.main-item__title--icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}

.main-item__title--text {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.8);
  font-weight: bold;
}

.sub-item {
  width: 100%;
  border-radius: 9px;
  border: 1px solid var(--solid-border-color);
  align-items: center;
  justify-content: space-between;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.sub-item__header {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  gap: 10px;
  padding: 15px;
}

.sub-item__title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px;
  border-radius: 3px;
  position: relative;
  left: -5px;
  gap: 10px;
  min-width: 0;
}

.sub-item__title--icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.sub-item__title--text {
  font-weight: bold;
  color: #000000;
  font-size: 16px;
}

.sub-item__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.sub-item__footer {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 15px;
  width: 100%;
}

.sub-item__progress {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
  width: 0;
  flex-grow: 1
}